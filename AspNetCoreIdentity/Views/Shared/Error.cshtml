@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um erro" : Model.Titulo;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ops! Ocorreu um erro ao, mas não se preocupe. Nosso time de desenvolvimento já está sendo acionado para verificar o problema.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}